@model IdentitySample.Models.ApplicationUser

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Details <small>Users</small></h1>
  </div>
  <!-- /.col-lg-12 -->
</div>

<div>
  <dl class="dl-horizontal">
    <dt>
      @Html.DisplayNameFor(model => model.UserName)
    </dt>
    <dd>
      @Html.DisplayFor(model => model.UserName)
    </dd>
  </dl>
</div>

<h4>List of roles for this user</h4>
@if ( ViewBag.RoleNames.Count == 0 )
{
  <hr />
  <p>No roles found for this user.</p>
}

<table class="table">

  @foreach ( var item in ViewBag.RoleNames )
  {
    <tr>
      <td>
        @item
      </td>
    </tr>
  }
</table>
<p>
  @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
  @Html.ActionLink("Back to List", "Index")
</p>



